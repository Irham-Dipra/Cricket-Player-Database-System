<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="524.0" prefWidth="875.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.searchByMaxAgeController">
   <children>
      <!-- Background Image -->
      <ImageView fitHeight="524.0" fitWidth="875.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/background-blur.jpg" />
         </image>
      </ImageView>
      
      <!-- VBox for layout -->
      <VBox alignment="CENTER" layoutX="250.0" layoutY="118.0" maxHeight="375.0" maxWidth="375.0" minHeight="375.0" minWidth="375.0" prefHeight="375.0" prefWidth="375.0" spacing="20.0" style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-background-color: rgba(255, 255, 255, 0.8); -fx-padding: 20px;" stylesheets="@testStyles.css">
         <children>
            <!-- HBox for Club Name -->
            <HBox prefHeight="41.0" prefWidth="349.0" spacing="10.0">
               <Label prefHeight="38.0" prefWidth="102.0" styleClass="form-label" text="Club Name" />
               <TextField fx:id="clubField" prefHeight="33.0" prefWidth="238.0" promptText="Enter Club Name" styleClass="form-textfield" />
            </HBox>
            
            <!-- Search Button -->
            <Button fx:id="search" mnemonicParsing="false" onAction="#searchClicked" styleClass="modern-button" text="Search" />
            
            <!-- Back Button -->
            <Button fx:id="back" mnemonicParsing="false" onAction="#backClicked" styleClass="modern-button-secondary" text="Back" />
         </children>
      </VBox>
   </children>
</AnchorPane>
