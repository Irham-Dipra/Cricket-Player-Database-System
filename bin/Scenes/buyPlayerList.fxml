<AnchorPane prefHeight="524.0" prefWidth="875.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.buyPlayerListController">
   <children>
      <!-- Placeholder for dynamic background -->
      <ImageView fx:id="backgroundImage" fitHeight="524.0" fitWidth="875.0" pickOnBounds="true" preserveRatio="true" />
      
      <!-- VBox for layout -->
      <VBox alignment="CENTER" layoutX="144.0" layoutY="74.0" maxHeight="375.0" maxWidth="600.0" minHeight="375.0" minWidth="600.0" prefHeight="375.0" prefWidth="600.0" spacing="20.0" style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-background-color: rgba(255, 255, 255, 0.8); -fx-padding: 20px;" stylesheets="@testStyles.css">
         <children>
            <!-- TableView -->
            <TableView fx:id="playersTable" prefHeight="296.0" prefWidth="572.0">
               <columns>
                  <!-- Column for Player Name -->
                  <TableColumn fx:id="nameColumn" prefWidth="300" text="Player Name" />
                  
                  <!-- Column for Buttons (Details and Sell) -->
                  <TableColumn fx:id="actionColumn" prefWidth="270" text="Actions" />
               </columns>
            </TableView>
         </children>
      </VBox>
      
            <!-- Back Button -->
      <Button fx:id="back" layoutX="470.0" layoutY="444.0" mnemonicParsing="false" onAction="#backClicked" styleClass="modern-button-secondary" stylesheets="@testStyles.css" text="Back" />
      <Button fx:id="refresh" layoutX="358.0" layoutY="444.0" mnemonicParsing="false" onAction="#refreshClicked" styleClass="modern-button" stylesheets="@testStyles.css" text="Refresh" />
   </children>
</AnchorPane>
