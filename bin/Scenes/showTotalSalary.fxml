<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="524.0" prefWidth="875.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.showTotalSalaryController">
   <children>
      <!-- Background Image -->
      <ImageView fitHeight="524.0" fitWidth="875.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/background-blur.jpg" />
         </image>
      </ImageView>
      
      <!-- VBox Container -->
      <VBox alignment="CENTER" layoutX="250.0" layoutY="150.0" maxHeight="250.0" maxWidth="400.0" minHeight="250.0" minWidth="400.0" prefHeight="250.0" prefWidth="400.0" spacing="20.0" style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-background-color: rgba(255, 255, 255, 0.8); -fx-padding: 20px;" stylesheets="@testStyles.css">
         <children>
            <!-- Club Name Section -->
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <Label styleClass="form-label" text="Club Name:" />
               <Label fx:id="clubLabel" styleClass="form-value" text="" />
            </HBox>
            
            <!-- Total Salary Section -->
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <Label styleClass="form-label" text="Total Salary:" />
               <Label fx:id="totalSalaryLabel" styleClass="form-value" text="" />
            </HBox>
            
            <!-- Back Button -->
            <Button fx:id="back" mnemonicParsing="false" onAction="#backClicked" styleClass="modern-button-secondary" text="Back" />
         </children>
      </VBox>
   </children>
</AnchorPane>
