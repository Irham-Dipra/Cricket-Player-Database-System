<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="524.0" prefWidth="875.0" stylesheets="@testStyles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.userHomePageController">
   <children>
      <!-- Placeholder for dynamic background -->
      <ImageView fx:id="backgroundImage" fitHeight="524.0" fitWidth="875.0" pickOnBounds="true" preserveRatio="true" />
      
      <!-- Layout for content -->
      <VBox alignment="CENTER" layoutX="138.0" layoutY="43.0" prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-background-color: rgba(255, 255, 255, 0.9); -fx-padding: 20px;">
         <children>
            <!-- TableView for Player Actions -->
            <TableView fx:id="playersTable" prefHeight="300.0" prefWidth="572.0">
               <columns>
                  <!-- Column for Player Name -->
                  <TableColumn fx:id="nameColumn" prefWidth="300.0" text="Player Name" />
                  
                  <!-- Column for Buttons (Details and Sell) -->
                  <TableColumn fx:id="actionColumn" prefWidth="270.0" text="Actions" />
               </columns>
            </TableView>
         </children>
      </VBox>
      <ButtonBar layoutX="323.0" layoutY="470.0" prefHeight="40.0" prefWidth="200.0">
        <buttons>
            
            <!-- Buy Button -->
            <Button fx:id="buy" mnemonicParsing="false" onAction="#buyClicked" styleClass="modern-button" text="Buy" />
          <Button fx:id="back" mnemonicParsing="false" onAction="#backClicked" styleClass="modern-button" text="Back" />
        </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
