        <!-- Modern Buttons -->
        <Button fx:id="loginGuest" layoutX="300.0" layoutY="200.0" onAction="#guestLoginClicked" prefHeight="50.0" prefWidth="200.0" styleClass="modern-button" stylesheets="@testStyles.css" text="Login as Guest" />
        <Button fx:id="loginUser" layoutX="300.0" layoutY="270.0" onAction="#userLoginClicked" prefHeight="50.0" prefWidth="200.0" styleClass="modern-button" stylesheets="@testStyles.css" text="Login as User" />
        <Button fx:id="exit" layoutX="300.0" layoutY="340.0" onAction="#exitClicked" prefHeight="50.0" prefWidth="200.0" styleClass="modern-button" stylesheets="@testStyles.css" text="Exit" />
      <ImageView fitHeight="1082.0" fitWidth="1923.0" layoutX="-1.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/pixelcut-export.jpeg" />
         </image>
      </ImageView>
    </children>
</AnchorPane>
